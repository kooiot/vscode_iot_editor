{
    "name": "iot-editor",
    "displayName": "IOT Editor",
    "description": "Developing application with connected FreeIOE device",
    "version": "1.1.0",
    "publisher": "kooiot",
    "author": {
        "name": "Dirk Chang",
        "email": "dirk@kooiot.com"
    },
    "license": "MIT",
    "engines": {
        "vscode": "^1.27.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/kooiot/vscode_iot_editor.git"
    },
    "categories": [
        "Other"
    ],
    "icon": "media/thingsroot.png",
    "activationEvents": [
        "onView:IOTExplorer",
        "onView:IOTViewer",
        "onCommand:iot_editor.configurationEdit",
        "workspaceContains:**/freeioe_devices.json"
    ],
    "main": "./out/extension",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "IOT Editor configuration",
            "properties": {
                "iot_editor.online": {
                    "type": "boolean",
                    "default": false,
                    "description": "Device is connected."
                },
                "iot_editor.config": {
                    "type": "number",
                    "default": -1,
                    "description": "Current configuration."
                },
                "iot_editor.debug": {
                    "type": "boolean",
                    "default": false,
                    "description": "Debug mode"
                }
            }
        },
        "commands": [
            {
                "command": "iot_editor.aboutEditor",
                "title": "About IOT Editor...",
                "category": "IOT"
            },
            {
                "command": "iot_editor.connect",
                "title": "Connect to device",
                "category": "IOT",
                "icon": {
                    "light": "./media/light/connect.svg",
                    "dark": "./media/dark/connect.svg"
                }
            },
            {
                "command": "iot_editor.disconnect",
                "title": "Disconnect to device",
                "category": "IOT",
                "icon": {
                    "light": "./media/light/disconnect.svg",
                    "dark": "./media/dark/disconnect.svg"
                }
            },
            {
                "command": "iot_editor.configurationSelect",
                "title": "Select a Configuration...",
                "category": "IOT",
                "icon": {
                    "light": "./media/light/settings.svg",
                    "dark": "./media/dark/settings.svg"
                }
            },
            {
                "command": "iot_editor.configurationEdit",
                "title": "Edit Configurations...",
                "category": "IOT",
                "icon": {
                    "light": "./media/light/settings.svg",
                    "dark": "./media/dark/settings.svg"
                }
            },
            {
                "command": "iot_editor.applicationCreate",
                "title": "Create new application...",
                "category": "IOT",
                "icon": {
                    "light": "./media/light/plus.svg",
                    "dark": "./media/dark/plus.svg"
                }
            },
            {
                "command": "IOTExplorer.applicationConfig",
                "title": "Config application...",
                "icon": {
                    "light": "./media/light/settings.svg",
                    "dark": "./media/dark/settings.svg"
                }
            },
            {
                "command": "IOTExplorer.applicationStart",
                "title": "Start application...",
                "icon": {
                    "light": "./media/light/play.svg",
                    "dark": "./media/dark/play.svg"
                }
            },
            {
                "command": "IOTExplorer.applicationStop",
                "title": "Stop application...",
                "icon": {
                    "light": "./media/light/stop.svg",
                    "dark": "./media/dark/stop.svg"
                }
            },
            {
                "command": "IOTExplorer.applicationRestart",
                "title": "Restart application...",
                "icon": {
                    "light": "./media/light/refresh.svg",
                    "dark": "./media/dark/refresh.svg"
                }
            },
            {
                "command": "IOTExplorer.refresh",
                "title": "Refresh",
                "icon": {
                    "light": "./media/light/refresh.svg",
                    "dark": "./media/dark/refresh.svg"
                }
            },
            {
                "command": "IOTExplorer.openFile",
                "title": "Open IOT Application File"
            },
            {
                "command": "IOTExplorer.revealResource",
                "title": "Reveal in FTP View"
            },
            {
                "command": "IOTViewer.applicationStart",
                "title": "Start application...",
                "icon": {
                    "light": "./media/light/play.svg",
                    "dark": "./media/dark/play.svg"
                }
            },
            {
                "command": "IOTViewer.applicationStop",
                "title": "Stop application...",
                "icon": {
                    "light": "./media/light/stop.svg",
                    "dark": "./media/dark/stop.svg"
                }
            },
            {
                "command": "IOTViewer.applicationRestart",
                "title": "Restart application...",
                "icon": {
                    "light": "./media/light/refresh.svg",
                    "dark": "./media/dark/refresh.svg"
                }
            },
            {
                "command": "IOTViewer.refresh",
                "title": "Refresh",
                "icon": {
                    "light": "./media/light/refresh.svg",
                    "dark": "./media/dark/refresh.svg"
                }
            },
            {
                "command": "IOTViewer.openFile",
                "title": "Open IOT Application File"
            },
            {
                "command": "IOTViewer.revealResource",
                "title": "Reveal in FTP View"
            },
            {
                "command": "IOTDeviceViewer.settings",
                "title": "Edit Settings",
                "icon": {
                    "light": "./media/light/settings.svg",
                    "dark": "./media/dark/settings.svg"
                }
            },
            {
                "command": "IOTDeviceViewer.refresh",
                "title": "Refresh",
                "icon": {
                    "light": "./media/light/refresh.svg",
                    "dark": "./media/dark/refresh.svg"
                }
            },
            {
                "command": "IOTDeviceViewer.openFile",
                "title": "Open Device Configuration"
            },
            {
                "command": "IOTDeviceViewer.revealResource",
                "title": "Reveal in Device View"
            },
            {
                "command": "IOTDeviceViewer.connect",
                "title": "Connect to device",
                "icon": {
                    "light": "./media/light/connect.svg",
                    "dark": "./media/dark/connect.svg"
                }
            },
            {
                "command": "IOTDeviceViewer.disconnect",
                "title": "Disconnect from device",
                "icon": {
                    "light": "./media/light/disconnect.svg",
                    "dark": "./media/dark/disconnect.svg"
                }
            },
            {
                "command": "IOTDeviceViewer.applicationConfig",
                "title": "Config application...",
                "icon": {
                    "light": "./media/light/settings.svg",
                    "dark": "./media/dark/settings.svg"
                }
            },
            {
                "command": "IOTDeviceViewer.applicationStart",
                "title": "Start application...",
                "icon": {
                    "light": "./media/light/play.svg",
                    "dark": "./media/dark/play.svg"
                }
            },
            {
                "command": "IOTDeviceViewer.applicationStop",
                "title": "Stop application...",
                "icon": {
                    "light": "./media/light/stop.svg",
                    "dark": "./media/dark/stop.svg"
                }
            },
            {
                "command": "IOTDeviceViewer.applicationRestart",
                "title": "Restart application...",
                "icon": {
                    "light": "./media/light/refresh.svg",
                    "dark": "./media/dark/refresh.svg"
                }
            },
            {
                "command": "IOTEventViewer.refresh",
                "title": "Refresh",
                "icon": {
                    "light": "./media/light/refresh.svg",
                    "dark": "./media/dark/refresh.svg"
                }
            },
            {
                "command": "IOTEventViewer.openFile",
                "title": "Open Device Event"
            },
            {
                "command": "IOTEventViewer.revealResource",
                "title": "Reveal in Device Event"
            }
        ],
        "menus": {
            "commandPalette": [
                {
                    "when": "config.iot_editor.debug == true",
                    "command": "iot_editor.aboutEditor"
                },
                {
                    "when": "config.iot_editor.online == false",
                    "command": "iot_editor.connect"
                },
                {
                    "when": "resourceScheme == 'ioe' &&config.iot_editor.online == true",
                    "command": "IOTExplorer.applicationStart"
                },
                {
                    "when": "resourceScheme == 'ioe' &&config.iot_editor.online == true",
                    "command": "IOTExplorer.applicationStop"
                },
                {
                    "when": "resourceScheme == 'ioe' &&config.iot_editor.online == false",
                    "command": "IOTExplorer.applicationRestart"
                },
                {
                    "when": "resourceScheme == 'iot' &&config.iot_editor.online == true",
                    "command": "IOTViewer.applicationStart"
                },
                {
                    "when": "resourceScheme == 'iot' &&config.iot_editor.online == true",
                    "command": "IOTViewer.applicationStop"
                },
                {
                    "when": "resourceScheme == 'iot' &&config.iot_editor.online == false",
                    "command": "IOTViewer.applicationRestart"
                }
            ],
            "view/title": [
                {
                    "command": "IOTExplorer.refresh",
                    "when": "view == IOTExplorer",
                    "group": "navigation"
                },
                {
                    "command": "IOTViewer.refresh",
                    "when": "view == IOTViewer",
                    "group": "navigation"
                },
                {
                    "command": "IOTDeviceViewer.settings",
                    "when": "view == IOTDeviceViewer",
                    "group": "navigation"
                },
                {
                    "command": "IOTDeviceViewer.refresh",
                    "when": "view == IOTDeviceViewer",
                    "group": "navigation"
                },
                {
                    "command": "IOTEventViewer.refresh",
                    "when": "view == IOTEventViewer",
                    "group": "navigation"
                }
            ],
            "view/item/context": [
                {
                    "command": "IOTDeviceViewer.connect",
                    "when": "viewItem == 'FreeIOE.Device'"
                },
                {
                    "command": "IOTDeviceViewer.applicationConfig",
                    "when": "viewItem == 'FreeIOE.Application'"
                },
                {
                    "command": "IOTDeviceViewer.applicationStart",
                    "when": "viewItem == 'FreeIOE.Application'"
                },
                {
                    "command": "IOTDeviceViewer.applicationStop",
                    "when": "viewItem == 'FreeIOE.Application'"
                },
                {
                    "command": "IOTDeviceViewer.applicationRestart",
                    "when": "viewItem == 'FreeIOE.Application'"
                },
                {
                    "command": "IOTExplorer.applicationConfig",
                    "when": "viewItem == 'IOTExplorer'"
                },
                {
                    "command": "IOTExplorer.applicationStart",
                    "when": "viewItem == 'IOTExplorer'"
                },
                {
                    "command": "IOTExplorer.applicationStop",
                    "when": "viewItem == 'IOTExplorer'"
                },
                {
                    "command": "IOTExplorer.applicationRestart",
                    "when": "viewItem == 'IOTExplorer'"
                }
            ],
            "editor/title": [
                {
                    "when": "config.iot_editor.online == false",
                    "command": "iot_editor.connect",
                    "group": "navigation"
                }
            ],
            "editor/context": [
                {
                    "when": "editorLangId != 'Log' && config.iot_editor.online == false && resourceScheme != 'device'",
                    "command": "iot_editor.connect",
                    "group": "1_modification"
                },
                {
                    "when": "editorLangId != 'Log' && resourceScheme == 'device'",
                    "command": "IOTDeviceViewer.connect",
                    "group": "1_modification"
                },
                {
                    "when": "editorLangId != 'Log' && resourceScheme == 'ioe' && config.iot_editor.online == true",
                    "command": "IOTExplorer.applicationRestart",
                    "group": "2_iot_editor"
                },
                {
                    "when": "editorLangId != 'Log' && resourceScheme == 'ioe' && config.iot_editor.online == true",
                    "command": "IOTExplorer.applicationStart",
                    "group": "2_iot_editor"
                },
                {
                    "when": "editorLangId != 'Log' && resourceScheme == 'ioe' && config.iot_editor.online == true",
                    "command": "IOTExplorer.applicationStop",
                    "group": "2_iot_editor"
                },
                {
                    "when": "editorLangId != 'Log' && resourceScheme == 'iot' && config.iot_editor.online == true",
                    "command": "IOTViewer.applicationRestart",
                    "group": "2_iot_editor"
                },
                {
                    "when": "editorLangId != 'Log' && resourceScheme == 'iot' && config.iot_editor.online == true",
                    "command": "IOTViewer.applicationStart",
                    "group": "2_iot_editor"
                },
                {
                    "when": "editorLangId != 'Log' && resourceScheme == 'iot' && config.iot_editor.online == true",
                    "command": "IOTViewer.applicationStop",
                    "group": "2_iot_editor"
                }
            ]
        },
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "iot_explorer",
                    "title": "FreeIOE Explorer",
                    "icon": "media/freeioe_explorer.svg"
                }
            ]
        },
        "views": {
            "iot_explorer": [
                {
                    "id": "IOTExplorer",
                    "name": "FreeIOE Explorer"
                },
                {
                    "id": "IOTDeviceViewer",
                    "name": "FreeIOE Devices"
                },
                {
                    "id": "IOTEventViewer",
                    "name": "Events"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.42",
        "@types/node": "^7.0.70",
        "tslint": "^5.11.0",
        "typescript": "^2.9.2",
        "vscode": "^1.1.21"
    },
    "dependencies": {
        "@types/request": "^2.47.1",
        "@types/ws": "^6.0.1",
        "request": "^2.88.0",
        "ws": "^6.0.0"
    }
}
